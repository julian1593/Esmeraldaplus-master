@model Esmeraldaplus.Core.Domain.Producto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/crud.cshtml";
}

<link href="~/css/actualizar_datos.css" rel="stylesheet" />

<h1>Actualizar</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="contenido">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducto" />
            
                <label asp-for="CantidaadProducto" class="control-label"></label>
                <input asp-for="CantidaadProducto" class="form-control" />
                <span asp-validation-for="CantidaadProducto" class="text-danger"></span>
            
                <label asp-for="IdTipoProducto" class="control-label"></label>
                <select asp-for="IdTipoProducto" class="form-control" asp-items="ViewBag.IdTipoProducto"></select>
                <span asp-validation-for="IdTipoProducto" class="text-danger"></span>
            
            
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            
            
                <label asp-for="PrecioProducto" class="control-label"></label>
                <input asp-for="PrecioProducto" class="form-control" />
                <span asp-validation-for="PrecioProducto" class="text-danger"></span>
            
            
                <input type="submit" value="Save" class="btn btn-primary" id="btn-crear"/>
                <a asp-action="Index" class="back">Back to List</a>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
